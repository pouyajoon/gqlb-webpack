{
    "compilerOptions": {
        "lib": [
            "es6",
        ],
        "outDir": "dist",
        "target": "es5",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "@jup/core": [
                "../core/src/index.ts"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./../core/src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}