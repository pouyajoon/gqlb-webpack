{
    "compilerOptions": {
        "lib": [
            "es6",
        ],
        "outDir": "dist",
        "target": "es5",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}